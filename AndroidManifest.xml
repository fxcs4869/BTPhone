<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.btphone"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
<uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="15" />

    <application
        android:name=".util.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DialActivity"
            android:label="@string/title_activity_dial" >
        </activity>
        <activity
            android:name=".SettingActivity"
            android:label="@string/title_activity_setting" >
        </activity>
        <activity
            android:name=".CalllogActivity"
            android:label="@string/title_activity_calllog"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name=".ContactsActivity"
            android:label="@string/title_activity_contacts"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name=".CallActivity"
            android:label="@string/title_activity_call"
            android:launchMode="singleInstance" >
        </activity>
        <activity
            android:name=".ContactViewActivity"
            android:label="@string/title_activity_contact_view" >
        </activity>
        <activity
            android:name=".CalllogDetailActivity"
            android:label="@string/title_activity_calllog_detail" >
        </activity>
        <activity
            android:name=".ContactsEditActivity"
            android:label="@string/title_activity_contacts_edit" >
        </activity>
    </application>

</manifest>